/////////////////////////
main4.css
////////////////////////
.image-gallery {
  display: flex;
  width: 90%;
  padding:20px;
  margin:100px auto;
  flex-direction: row;
  justify-content: center;
}

.thumbnail {
  width: 250px;
  height: 10px;
  margin:0  10px;
  box-shadow: 0 0 20px 2px rgba(0,0,0,.1);

  transition: transform 0.3s ease;
}

.thumbnail img {
  margin-top:1100px;
  width: 100px;
  height: 10px;
  object-fit: cover;
  display: block;
  border-radius: 5px;
}

.thumbnail:hover {
  transform: scale(1.2);
  z-index: 2;
}


